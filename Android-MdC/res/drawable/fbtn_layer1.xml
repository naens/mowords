<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#e8ccb0"
                android:endColor="#825500"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#464646"/>
            <corners
                android:radius="24dp" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffece3"
                android:endColor="#c58b1c"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#c58b1c"/>
            <corners
                android:radius="20dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

</layer-list>