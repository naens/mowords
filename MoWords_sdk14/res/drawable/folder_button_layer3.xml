<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#5b72b3"
                android:startColor="#739bc4" />

            <corners android:radius="12dp" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#e8ccb0"
                android:endColor="#825500"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#464646"/>
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="6dp"
                android:right="5dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffece3"
                android:endColor="#c58b1c"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#c58b1c"/>
            <corners
                android:radius="7dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp" />
        </shape>
    </item>

</layer-list>