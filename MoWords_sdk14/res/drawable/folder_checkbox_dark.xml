<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="#667ba3"
                android:endColor="#00131c"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#3a74e3"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#4f86f1"
                android:endColor="#0d2c4b"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#b9b9b9"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>