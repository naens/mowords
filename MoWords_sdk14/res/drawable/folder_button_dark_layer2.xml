<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <gradient
                android:startColor="#99b0d9"
                android:endColor="#343e48"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#b9b9b9"/>
            <corners
                android:radius="12dp" />
            <padding
                android:left="6dp"
                android:top="7dp"
                android:right="6dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#87abee"
                android:endColor="#727d82"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#3a74e3"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp" />
        </shape>
    </item>

</layer-list>