<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="#8d827d"
                android:endColor="#785411"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#c58b1c"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffece3"
                android:endColor="#c58b1c"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#c58b1c"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="6dp"
                android:right="10dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>