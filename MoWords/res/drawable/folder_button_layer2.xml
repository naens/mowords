<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <gradient
                android:startColor="#cbc1b7"
                android:endColor="#825500"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#464646"/>
            <corners
                android:radius="12dp" />
            <padding
                android:left="6dp"
                android:top="7dp"
                android:right="6dp"
                android:bottom="7dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#8d827d"
                android:endColor="#785411"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#c58b1c"/>
            <corners
                android:radius="8dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp" />
        </shape>
    </item>

</layer-list>